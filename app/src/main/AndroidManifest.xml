<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.royidanproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".Application.RoyIdanProject"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoyIdanProject">
        <service
            android:name=".Services.MusicService2"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".ManufacturerActivity"
            android:exported="false" />

        <activity
            android:name=".TestingActivity"
            android:exported="true" />
        <activity
            android:name=".AddNewCardActivity"
            android:exported="true" />
        <activity
            android:name=".OrderHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".OrderActivity"
            android:exported="false" />
        <activity
            android:name=".ReceiptActivity"
            android:exported="true" />
        <activity
            android:name=".CreditCardsActivity"
            android:exported="true" />
        <activity
            android:name=".CartActivity"
            android:exported="false" />
        <activity
            android:name=".ThreadActivity"
            android:exported="true" />
        <activity
            android:name=".GalleryActivity"
            android:exported="true" />
        <activity
            android:name=".ManagerActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".UsersActivity"
            android:exported="true" />
        <activity
            android:name=".StartupActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver
            android:name=".BroadcastReceivers.WifiStatusReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <receiver
            android:name=".BroadcastReceivers.BatteryReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".Services.MusicService"
            android:enabled="true"
            android:exported="true" />
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>