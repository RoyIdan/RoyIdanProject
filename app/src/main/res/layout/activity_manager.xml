<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <!--Buttons Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="מוצרים"
            android:textSize="15dp"
            android:layout_marginHorizontal= "10dp"
            android:id="@+id/btnProducts" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="יצרנים"
            android:textSize="15dp"
            android:layout_marginHorizontal= "10dp"
            android:id="@+id/btnManufacturers" />
        <!--TODO - Replace this with something else-->
        <Spinner
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:entries="@array/spinner_phone"
            android:textSize="15dp"
            android:layout_marginHorizontal= "10dp"
            android:id="@+id/spiGoTo"/>


    </LinearLayout>

    <!--Products Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:id="@+id/llProducts"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="דף ניהול מוצרים"
            android:background="#FFFF00"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <!--Add / Edit selection layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="הוספת מוצר חדש"
                android:id="@+id/btnAddNewProduct" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="עריכת מוצרים קיימים"
                android:id="@+id/btnEditExistingProducts" />

        </LinearLayout>

        <!--Add new product layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/llAddNewProduct"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="דף הוספת מוצר"
                android:background="#FFFF00"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera"
                    android:scaleType="centerCrop"
                    android:id="@+id/ibCamera"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/iphone11"
                    android:id="@+id/ivPhoto"
                    android:scaleType="centerCrop"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gallery"
                    android:scaleType="centerCrop"
                    android:id="@+id/ibGallery"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:id="@+id/ll_spiCategory">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="קטגוריה:" />


                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:entries="@array/spinner_city"
                    android:id="@+id/spiCategory" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:id="@+id/ll_spiManufacturer">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="יצרן:" />


                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:entries="@array/spinner_city"
                    android:id="@+id/spiManufacturer" />

            </LinearLayout>

            <!--Add new product layout (common properties)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:id="@+id/llAddNewProductCommon"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!--שם מוצר-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="שם מוצר:" />


                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:text="ככג"
                        android:textSize="18dp"
                        android:digits="אבגדהוזחטיכלמנסעפצקרשתabcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 _-"
                        android:id="@+id/etName"/>

                </LinearLayout>

                <!--מחיר-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="מחיר:" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="5000"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:id="@+id/etPrice"/>

                </LinearLayout>

                <!--מלאי-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="מלאי:" />


                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="ככג"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:id="@+id/etStock"/>

                </LinearLayout>


            </LinearLayout>

            <!--Add new product layout (smartphone)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/llAddNewProductSmartphone"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!--
                private PhoneColor phoneColor;
                private int phoneScreenSize;
                private int phoneStorageSize;
                private int phoneRamSize;
                -->

                <!--צבע-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="צבע:"
                        android:layout_marginRight="20dp"/>

                    <RadioGroup
                        android:layout_width="175dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/rgSmartphoneColor">

                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/radBlack" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle" />

                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/radGray" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle" />

                        <RadioButton
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/radWhite" />

                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle" />

                    </RadioGroup>

                </LinearLayout>

                <!--גודל מסך-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="גודל מסך:" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="5000"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:id="@+id/etScreenSize"/>

                </LinearLayout>

                <!--נפח אחסון-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="-5dp"
                        android:textSize="18dp"
                        android:text="נפח אחסון:" />


                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="ככג"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:id="@+id/etStorageSize"/>

                </LinearLayout>

                <!--גודל זיכרון-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="זיכרון:" />


                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="ככג"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:id="@+id/etRamSize"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llFinalButtons">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="הוסף לחנות"
                    android:id="@+id/btnAdd" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="נקה שדות"
                    android:id="@+id/btnReset" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--Manufacturers Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:id="@+id/llManufacturers"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="דף ניהול יצרנים"
            android:background="#FFFF00"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <!--Add / Edit selection layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="הוספת יצרן חדש"
                android:id="@+id/btnAddNewManufacturer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="עריכת יצרנים קיימים"
                android:id="@+id/btnEditExistingManufacturers" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>