<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33.5dp"
            android:text="iPhone 11"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="2sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/tvProductName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מחיר: ₪3000"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tvProductPrice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="יצרן: Apple"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tvProductManufacturer"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="דירוג: "
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-80dp"
                android:layout_marginTop="4dp"
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:scaleX=".6"
                android:rating="3.5"
                android:scaleY=".8"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:max="5"/>

        </LinearLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="במלאי: 4"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tvProductStock" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="מידע נוסף"
            android:paddingBottom="1dp"
            android:paddingTop="0dp"
            android:id="@+id/btnDetailedInfo"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="210dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProductPhoto"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/iphone11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:text="+"
                android:id="@+id/btnPlus" />
            <TextView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:text="1"
                android:gravity="center"
                android:id="@+id/tvCount" />
            <Button
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:text="-"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/btnMinus" />

        </LinearLayout>

        <Button
            android:layout_width="110dp"
            android:layout_marginTop="5dp"
            android:layout_height="35dp"
            android:paddingVertical="0dp"
            android:text="הוסף לסל"
            android:id="@+id/btnAddToCart"/>

    </LinearLayout>


</LinearLayout>