<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזמנה מספר:"
            android:textSize="25sp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678"
            android:textSize="25sp"
            android:id="@+id/tvOrderNumber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תאריך הזמנה:"
            android:textSize="25sp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:textDirection="ltr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/12/22 22:22:22"
            android:textSize="20sp"
            android:id="@+id/tvOrderDate"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סך הכל מחיר:"
            android:textSize="25sp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:textDirection="ltr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12000$"
            android:textSize="25sp"
            android:id="@+id/tvTotalPrice"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="חשבונית מס"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/btnReceipt" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="חזרה לדף ראשי"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/btnMainActivity" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvDetails" />

</LinearLayout>