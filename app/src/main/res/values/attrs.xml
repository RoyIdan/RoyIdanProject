<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CreditCardView" >
        <attr name="cardNumber" format="string" />
        <attr name="cardExpireDate" format="string" />
        <attr name="cardHolder" format="string" />
        <attr name="cardCompany" format="enum" >
            <enum name="AMERICAN_EXPRESS" value="0"/>
            <enum name="ISRACARD" value="1"/>
            <enum name="MASTERCARD" value="2"/>
            <enum name="VISA" value="3"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="BatteryView">
        <attr name="bv_percent" format="integer" />
        <attr name="bv_charging" format="boolean" />
    </declare-styleable>
</resources>